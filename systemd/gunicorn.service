[Unit]
Description=Gunicorn for flask-board
After=network.target

[Service]
User=vagrant
Group=www-data
WorkingDirectory=/home/vagrant/app/flask-board
Environment="PATH=/home/vagrant/.venv/bin"
ExecStart=/home/vagrant/.venv/bin/gunicorn -w 3 -b 0.0.0.0:8000 wsgi:app       --access-logfile /var/log/gunicorn-access.log       --error-logfile /var/log/gunicorn-error.log
Restart=always

[Install]
WantedBy=multi-user.target
